<section id="content">
  <div class="entry">
    <div class="cmsms-form-builder">

      <div class="box success_box">
        <table>
          <tr>
            <td>&nbsp;</td>
            <td>Thank You!<br>Your message has been sent successfully.</td>
          </tr>
        </table>
      </div>

      <p>Required fields are marked <span class="color_3">*</span></p>

      <%= form_for [:short_film, @short_film_user], :html => { :class => "form-horizontal", :id => "short_film_user_form" } do |f| %>
        <%= render "/shared/form_errors", :object => f.object %>

        <h2>Info</h2>

        <div class="form_info cmsms_input">
          <label for="contact_name">Title <span class="color_3">*</span></label>
          <%= f.text_field :title, :class => "validate[required]", :size => "22", :placeholder => "This is the title of the ShortFilm" %>
        </div>

        <div class="form_info cmsms_input">
          <label for="contact_name">Length minutes <span class="color_3">*</span></label>
          <%= f.text_field :length_minutes, :class => "validate[required]", :size => "5", :placeholder => "00" %>
        </div>

        <div class="form_info cmsms_select">
          <label for="contact_name">Language <span class="color_3">*</span></label>
          <br />
          <%= f.select(:language, ShortFilmUser::LANGUAGES.map { |e| [e, e] }) %>
        </div>

        <div class="form_info cmsms_select">
          <label for="contact_name">Subtitles Language <span class="color_3">*</span></label>
          <br />
          <%= f.select(:subtitles_language, ShortFilmUser::LANGUAGES.map { |e| [e, e] }, { include_blank: "" }) %>
        </div>

        <div class="form_info cmsms_select">
          <label for="contact_name">Genre <span class="color_3">*</span></label>
          <br />
          <%= f.select(:genre, ShortFilmUser::GENRES.map { |e| [e, e] }, {}, :class => "form-control") %>
        </div>

        <div class="form_info cmsms_textarea">
          <label for="contact_name">Synopsis <span class="color_3">*</span></label>
          <%= f.text_area :synopsis, :class => "validate[required,minSize[10]]", :cols => "28", :rows => "6", :placeholder => "Description of your ShortFilm" %>
        </div>

        <h2>Thumbnail</h2>

        <div class="form_info cmsms_input">
          <label for="contact_name">Image <span class="color_3">*</span></label>
          <br />
          <%= f.file_field :thumbnail, :class => "validate[required]", :size => "22" %>
        </div>

        <h2>Script Embed</h2>

        <div class="form_info cmsms_textarea">
          <label for="contact_name">Script embed of the video</label>
          <%= f.text_area :script_embed, :cols => "28", :rows => "6", :placeholder => "Script from youtube, vimeo, blip.tv, ..." %>
