<%= javascript_include_tag "/assets/app/front/js/short_film_user_session_form.js" %>

<section id="content">
  <div class="entry">
    <div class="cmsms-form-builder">
      <%= form_for [:short_film, @short_film_user_session], :html => { :class => "form-horizontal", :id => "short_film_user_session_form" } do |f| %>
        <%= render "/shared/form_errors", :object => f.object %>

        <p><%= t("views.short_films.new.required_fields") %> <span class="color_3">*</span></p>

        <h2><%= t("views.short_film_session.new.title") %></h2>

        <div class="form_info cmsms_input">
          <%= f.label :producer_email do %><%= t("activerecord.attributes.short_film_user.producer_email") %> <span class="color_3">*</span><% end %>
          <%= f.text_field :producer_email, :class => "validate[required]", :size => "22" %>
        </div>

        <div class="form_info cmsms_input">
          <%= f.label :password do %><%= t("activerecord.attributes.short_film_user.password") %> <span class="color_3">*</span><% end %>
          <%= f.text_field :password, :class => "validate[required]", :size => "22" %>
          <p><%= link_to t("views.sessions.new.button_forgot_password"), short_film_forgot_password_path %></p>
        </div>

        <div class="cl"></div>
        <div>
          <%= f.submit t("views.sessions.new.button_send"), :class => "button" %>
        </div>
      <% end %>

      <div class="cl"></div>


    </div>
  </div>
</section>