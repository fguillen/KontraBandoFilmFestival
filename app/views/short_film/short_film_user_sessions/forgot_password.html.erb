<% title t("views.short_film_user_sessions.forgot_password.title") %>

<section id="content">
  <div class="entry">
    <div class="cmsms-form-builder">
      <%= form_for [:short_film, @short_film_user_session], :url => short_film_forgot_password_path, :html => { :class => "form-horizontal" } do |f| %>
        <%= render "/shared/form_errors", :object => f.object %>

        <p><%= t("views.short_films.new.required_fields") %> <span class="color_3">*</span></p>

        <h2><%= t("views.short_film_user_sessions.forgot_password.title") %></h2>

        <div class="form_info cmsms_input">
          <%= f.label :producer_email do %><%= t("activerecord.attributes.short_film_user.producer_email") %> <span class="color_3">*</span><% end %>
          <%= f.text_field :producer_email, :class => "validate[required]", :size => "22" %>
        </div>

        <div class="cl"></div>
        <div>
          <%= f.submit t("views.short_film_user_sessions.forgot_password.button_send"), :class => "button" %>
        </div>
      <% end %>

      <div class="cl"></div>


    </div>
  </div>
</section>