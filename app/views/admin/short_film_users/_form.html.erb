<%= form_for [:admin, @short_film_user], :html => { :class => "form-horizontal" } do |f| %>
  <%= render "/shared/form_errors", :object => f.object %>

  <fieldset>
    <legend><%= "ShortFilmUser attributes" %></legend>

    <div class="form-group">
      <%= f.label :title, :class => "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_field :title, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :synopsis, :class => "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_area :synopsis, :class => "form-control mdm-input" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= f.submit :class => "btn btn-primary" %>
      </div>
    </div>
  </fieldset>
<% end %>

