  <body>
<!-- __________________________________________________ Start Page -->

    <section id="page">
      <a href="#" id="slide_top"></a>

<!-- __________________________________________________ Start Container -->

      <div class="container set_fixed">
<!-- __________________________________________________ Start Navigation -->

        <%= render :partial => "layouts/front/menu" %>
<!-- __________________________________________________ Finish Navigation -->

<!-- __________________________________________________ Start Header -->

        <header id="header">
          <div class="header_inner">
            <a class="logo" href="index.html">
              <h1>KontraBando film festival</h1>
              <h3>I Festival de Cortos para JÃ³venes en CineCiutat</h3>
            </a>
            <ul class="social_icons">
              <li>
                <a target="_blank" href="#" title="#">
                  <img src="/assets/vendor/riviera/images/linkedin.png" alt="#" />
                </a>
              </li>
              <li>
                <a target="_blank" href="#" title="#">
                  <img src="/assets/vendor/riviera/images/twitter.png" alt="#" />
                </a>
              </li>
              <li>
                <a target="_blank" href="#" title="#">
