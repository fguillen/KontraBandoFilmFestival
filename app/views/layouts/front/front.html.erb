  <body>
<!-- __________________________________________________ Start Page -->

    <section id="page">
      <a href="#" id="slide_top"></a>

<!-- __________________________________________________ Start Container -->

      <div class="container set_fixed">
<!-- __________________________________________________ Start Navigation -->

        <div class="wrap_nav">
          <div class="wrap_responsive_nav">
            <a class="responsive_nav" href="javascript:void(0);"><span></span></a>
          </div>
          <nav>
            <ul id="navigation">
              <li class="current_page_item"><a href="/front/pages/home"><span>KBFF</span></a></li>
              <li><a href="/front/pages/about"><span>El festival</span></a></li>
