              <li><a href="/front/pages/film_new"><span>Envía tu corto</span></a></li>
              <li><a href="#"><span>Blog</span></a></li>
            </ul>
            <div class="cl"></div>
          </nav>
        </div>
<!-- __________________________________________________ Finish Navigation -->

<!-- __________________________________________________ Start Header -->

        <header id="header">
          <div class="header_inner">
            <a class="logo" href="index.html">
              <h1>KontraBando film festival</h1>
              <h3>I Festival de Cortos para Jóvenes en CineCiutat</h3>
            </a>
            <ul class="social_icons">
              <li>
                <a target="_blank" href="#" title="#">
                  <img src="/assets/vendor/riviera/images/linkedin.png" alt="#" />
                </a>
              </li>
              <li>
                <a target="_blank" href="#" title="#">
                  <img src="/assets/vendor/riviera/images/twitter.png" alt="#" />
                </a>
              </li>
              <li>
                <a target="_blank" href="#" title="#">
                  <img src="/assets/vendor/riviera/images/facebook.png" alt="#" />
                </a>
              </li>
              <li>
                <a target="_blank" href="#" title="#">
                  <img src="/assets/vendor/riviera/images/google.png" alt="#" />
                </a>
              </li>
              <li>
                <a target="_blank" href="#" title="#">
                  <img src="/assets/vendor/riviera/images/rss.png" alt="#" />
                </a>
              </li>
            </ul>
            <div class="cl"></div>
          </div>
        </header>
<!-- __________________________________________________ Finish Header -->


        <div class="headline">
          <h1><%= content_for?(:title) ? yield(:title) : "" %></h1>
        </div>
<!-- __________________________________________________ Start Middle -->

        <section id="middle">
          <div class="middle_inner">
            <div class="content_wrap fullwidth">
              <%= yield %>
            </div>
<!-- __________________________________________________ Finish Content -->
            <div class="cl"></div>
          </div>
        </section>
<!-- __________________________________________________ Finish Middle -->


      </div>
<!-- __________________________________________________ Finish Container -->

<!-- __________________________________________________ Start Footer -->

      <footer id="footer">
        <div class="footer_inner">
          <span class="copyright">KontraBando Film Festival &copy; 2013</span>
          <ul class="footer_nav">
            <li><a href="/front/pages/home">KBFF</a></li>
            <li><a href="/front/pages/about">El festival</a></li>
            <li><a href="/front/pages/films">Los cortos</a></li>
            <li><a href="/front/pages/film_new">Envía tu corto</a></li>
            <li><a href="#">Blog</a></li>
          </ul>
        </div>
      </footer>
<!-- __________________________________________________ Finish Footer -->

    </section>
